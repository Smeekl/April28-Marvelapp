{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "stripInternal": true,
    "pretty": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
  },
  "include": [
    "./entities/*.entity.ts",
  ],
  "exclude": [
    "tmp",
    "temp",
    "build",
    "node_modules"
  ]
}